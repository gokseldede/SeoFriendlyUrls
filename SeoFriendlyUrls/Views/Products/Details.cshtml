@model SeoFriendlyUrls.Models.Product

<h2>Product Details</h2>
<table>
    <tr>
        <td>Product ID</td>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <td>Description</td>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <td>Price</td>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <td>Image</td>
        <td><img src="http://placehold.it/200x200" /></td>
    </tr>
</table>